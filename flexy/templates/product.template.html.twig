{% extends "base.template.html.twig" %}
{% block title %}Products{% endblock %}
{% block body %}
<div class="container">
    <h1>Products</h1>
    <div class="btn-wraper f-right"><a href="/products/new" role="button" class="btn btn-primary">New</a></div>
    <div class="table-responsive">
        <table class="table thead-dark table-striped table-hover table-edit">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th colspan="2" align="center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr data-id="{{ product.id }}">
                        <td>{{ product.id }}</td>
                        <td>{{ product.title }}</td>
                        <td class="td-actions">
                            <div class="btn-group d-flex">
                                <a class="btn btn-primary w-100" href="/products/edit/{{product.id}}"><span class="oi oi-pencil"></span></a>
                                <button class="btn btn-danger btn-delete w-100"><span class="oi oi-trash"></span></button>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% include 'includes/modal-confirm.html.twig' with {'bodyModal': 'You are you sure you would like to delete this product?'} %}
{% endblock %}