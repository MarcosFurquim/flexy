{% extends "base.template.html.twig" %}
{% block title %}New Product{% endblock %}
{% block body %}
<div class="container">
    <h1>New Product</h1>
    <form id="newProduct" method="POST" action="/products/createNew" enctype='multipart/form-data' >
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Enter title" value="">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="stock">Stock</label>
            <input type="text" class="form-control" id="stock" name="stock" placeholder="Stock" value="">
        </div>
        <div class="form-group">
            <label for="image">Image</label>
            <input type="file" class="form-control-file" id="image" name="image" aria-describedby="image">
            <small id="image" class="form-text text-muted">Image for product.</small>
        </div>
        <div class="form-group">
            <label for="tag">Tag</label>
            <select class="form-control" id="tag" name="tag">
            <option>1</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

{% endblock %}
